

{{# pt }}
<div class="twelve column">
<section>

    <h1>{{ tab_name }}</h1>
    <a href="/fetch/{{ tab_name.downcase }}">refresh</a>

    <div class="row">
    {{# tab_data }} 
    <div class="four column">
    <div class="holder ">
        <h2>{{ feed_title.upcase.strip }}</h2>
        <div class="feed">
        {{# feed_data }}
            <article>
                <a href="{{ url }}" target="{{tab_name}}">{{{ title}}}</a>
                <p class="summary">{{{ summary }}}</p>
            </article>
        {{/ feed_data }}
        </div>
    </div>
    </div>
    {{/ tab_data }}

</div>
</section>
</div>
{{/ pt }}


